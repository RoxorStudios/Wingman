#!/usr/bin/env php
<?php

/*
|--------------------------------------------------------------------------
| No memory limit for us
|--------------------------------------------------------------------------
*/

ini_set('memory_limit', '-1');

/*
|--------------------------------------------------------------------------
| Init our application
|--------------------------------------------------------------------------
*/

$wingman = require __DIR__.'/bootstrap/app.php';

/*
|--------------------------------------------------------------------------
| Init our console
|--------------------------------------------------------------------------
*/

$console = require __DIR__.'/bootstrap/console.php';

/*
|--------------------------------------------------------------------------
| Run our console
|--------------------------------------------------------------------------
*/

$console->run();